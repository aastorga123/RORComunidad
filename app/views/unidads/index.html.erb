
<h1>Lista Unidades</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Numero unidad</th>
      <th>Calle interna</th>
      <th>Ubicacion</th>
      <th>Categoria</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @unidads.each do |unidad| %>
      <tr>
        <td><%= unidad.numero_unidad %></td>
        <td><%= unidad.calle_interna %></td>
        <% if Ubicacion.find(unidad.ubicacion_id) != nil%>
        <td><%= Ubicacion.find(unidad.ubicacion_id).nombreubicacion %></td>
        <% else %>
        <td>Se ha eliminado la ubicacion.</td>
        <% end %>
        <td><%= Categorium.find(unidad.categoria_id).nombre_categoria %></td>
        <td><%= link_to 'Detalle', unidad %></td>
        <td><%= link_to 'Editar', edit_unidad_path(unidad) %></td>
        <td><%= link_to 'Eliminar', unidad, method: :delete, data: { confirm: 'Estas seguro de eliminar esta unidad?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Unidad', new_unidad_path %>
