
<h1>Lista Ubicaciones</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombreubicacion</th>
      <th>Direccion ubicacion</th>
      <th>Tipo</th>
      <th>Cliente</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @ubicacions.each do |ubicacion| %>
      <tr>
        <td><%= ubicacion.nombreubicacion %></td>
        <td><%= ubicacion.direccion_ubicacion %></td>
        <td><%= ubicacion.tipo %></td>
        <td><%= Cliente.find(ubicacion.cliente_id).rut %></td>
        <td><%= link_to 'Detalle', ubicacion %></td>
        <td><%= link_to 'Editar', edit_ubicacion_path(ubicacion) %></td>
        <td><%= link_to 'Eliminar', ubicacion, method: :delete, data: { confirm: 'estas seguro de eliminar esta ubicaciÃ³n?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

